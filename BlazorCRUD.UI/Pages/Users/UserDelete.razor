@page "/userdelet/{Id}"

<h1>FilmDelete</h1>

<p style="color:darkred;text-align:center"> Are you sure </p>
<EditForm Model="@userrequest">
    <table class="table">
        <tr>
            <td>Nombre:</td>
            <td> <input type="text" @bind="userrequest.Nombre" /> </td>
        </tr>
        <tr>
            <td>Apellido:</td>
            <td> <input type="text" @bind="userrequest.Apellido" /> </td>
        </tr>
        <tr>
            <td>Correo:</td>
            <td> <input type="email" @bind="userrequest.Correo" /> </td>
        </tr>
        <tr>
            <td>Contraseña:</td>
            <td> <input type="password" @bind="userrequest.Contrasena" /> </td>
        </tr>
        <tr>
            <td>Rol:</td>
            <td>
                <select name="select" @bind="userrequest.Rol">
                    <option selected>Selecionar</option>
                    <option value=0>User</option>
                    <option value=2>Admin</option>
                    <option value=4>Op</option>
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center">
                <input type="submit" value="Delete" @onclick="DeleteFilm" />
                <input type="button" value="Cancel" @onclick="CancelFilm" />
            </td>
        </tr>
    </table>
</EditForm>
@code {
    [Parameter]
    public string Id { get; set; }

    UserRequestDto userrequest = new UserRequestDto();

    protected void CancelFilm()
    {
        NavigationManager.NavigateTo("/userlist");
    }
    protected async Task DeleteFilm()
    {
        await FachadaUserService.UserManagementDelete(userrequest).ConfigureAwait(true);
        NavigationManager.NavigateTo("/userlist");
    }
    protected override async Task OnInitializedAsync()
    {
        userrequest.UsuarioId = Guid.Parse(Id);
        userrequest = await FachadaUserService.UserManagementGet(userrequest).ConfigureAwait(true);
    }
}
