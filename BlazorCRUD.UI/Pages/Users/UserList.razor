@page "/userlist"
@using Blazor.Aplicacion.Dto.UsersDto.Registro
@using Blazor.Aplicacion.Core.Users.Registro
@inject IUserService UserService

<h3>UserList</h3>
@if (userrequest == null)
{


    <p> <em> Loading... </em> </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <td>Title</td>
                <td>Director</td>
                <td>Fecha</td>
                <td>  </td>
                <td>  </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in userrequest)
            {
                <tr>
                    <td>@user.Nombre</td>
                    <td>@user.Apellido</td>
                    <td>@user.Correo</td>
                    <td>@user.Rol</td>
                    <td> <a href="/filmdetails/@user.UsuarioId"> <i> Edit </i> </a> </td>
                    <td> <a href="/filmdelet/@user.UsuarioId"> <i> Delete </i> </a> </td>
                </tr>
            }
        </tbody>

    </table>
}

@code {
    private IEnumerable<UserRequestDto> userrequest;
    protected override async Task OnInitializedAsync()
    {
        try
        {
        }
        catch (Exception)
        {
            throw;
        }
    }
}
